                    <label asp-for="Scale" class="control-label input-group-text"></label>
                    <div><input asp-for="Scale" class="form-control" /></div>
                    <span asp-validation-for="Scale" class="text-danger"></span>
                </div>
                <div class="input-group" style="padding-bottom:15px;">
                    <label asp-for="Brand" class="control-label input-group-text"></label>
                    <div><input asp-for="Brand" class="form-control" /></div>
                    <span asp-validation-for="Brand" class="text-danger"></span>
                </div>
                <div class="input-group" style="padding-bottom:15px;">
                    <label asp-for="Details" class="control-label input-group-text"></label>
                    <div><input asp-for="Details" class="form-control" /></div>
                    <span asp-validation-for="Details" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>
</form>
    </div>
</div>

<div >
    <a class="btn btn-info" asp-action="Index">Back to List</a>
</div>

